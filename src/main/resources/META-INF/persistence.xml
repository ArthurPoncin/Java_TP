<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="pu-tp2" transaction-type="RESOURCE_LOCAL">
        <class>com.tp2.bo.Livre</class>
        <class>com.tp2.bo.Emprunt</class>
        <class>com.tp2.bo.Client</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="jakarta.persistence.jdbc.url"    value="jdbc:postgresql://localhost:5432/db" />
            <property name="jakarta.persistence.jdbc.user"   value="root" />
            <property name="jakarta.persistence.jdbc.password" value="password" />

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            
            <property name="hibernate.hbm2ddl.auto" value="create" />
        </properties>
    </persistence-unit>

    <persistence-unit name="pu-banque" transaction-type="RESOURCE_LOCAL">
        <class>com.tp4.bo.Banque</class>
        <class>com.tp4.bo.Client</class>
        <class>com.tp4.bo.Compte</class>
        <class>com.tp4.bo.LivretA</class>
        <class>com.tp4.bo.AssuranceVie</class>
        <class>com.tp4.bo.Operation</class>
        <class>com.tp4.bo.Virement</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="jakarta.persistence.jdbc.url"    value="jdbc:postgresql://localhost:5432/banque" />
            <property name="jakarta.persistence.jdbc.user"   value="root" />
            <property name="jakarta.persistence.jdbc.password" value="password" />

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />

            <property name="hibernate.archive.autodetection" value="" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create" />
        </properties>
    </persistence-unit>
</persistence>
